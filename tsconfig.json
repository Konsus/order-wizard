{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./lib",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "removeComments": true,
    "jsx": "react",
    "types": ["node"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "babelOptions":"plugins[]=nameof"
  }
}
